<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_paper"
    tools:context=".SettingsActivity">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="293dp"
        android:layout_height="105dp"
        android:layout_marginBottom="624dp"
        android:src="@drawable/setting_title_masking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="33dp"
        android:fontFamily="@font/nanumbaeeunhae"
        android:text="알림 설정"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="361dp"
        android:layout_height="461dp"
        android:layout_marginBottom="134dp"
        android:layout_weight="9"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_title">


        <Switch
            android:id="@+id/alarmOnSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbaeeunhae"
            android:text=" 알림 켜기"
            android:textSize="40sp"
            android:textStyle="bold"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track_selector"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="123dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/h_line" />

        <LinearLayout
            android:id="@+id/beforeAlarmLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/beforeAlarmText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbaeeunhae"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="미리 알림"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="332dp" />

            <Spinner
                android:id="@+id/beforAlarmSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbaeeunhae"
                android:gravity="center_vertical|left" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/h_line" />

        <Switch
            android:id="@+id/vibratorOnSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbaeeunhae"
            android:text=" 진동"
            android:textSize="40sp"
            android:textStyle="bold"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track_selector"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="221dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/h_line" />

        <LinearLayout
            android:id="@+id/soundSelectLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alarmSoundText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbaeeunhae"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="알림음 선택"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="415dp" />

            <TextView
                android:id="@+id/alarmSoundTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbaeeunhae"
                android:gravity="center_vertical|center"
                android:text="호롤롤로"
                android:textSize="40dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/h_line" />

        <Switch
            android:id="@+id/emptyWasherAlarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbaeeunhae"
            android:text=" 남은 자리 알림"
            android:textSize="40sp"
            android:textStyle="bold"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track_selector"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="499dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/h_line" />

    </LinearLayout>

    <Button
        android:id="@+id/QRreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/ripple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>